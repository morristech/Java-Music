<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comnihk.github.sparkday.MainActivity"
    android:background="#332532">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bbLogoMarkers"
            android:scaleType="fitCenter"
            android:src="@drawable/bb_logo_markers"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bbLogo"
            android:scaleType="fitCenter"
            android:src="@drawable/bb_logo"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bbLogoMarkerA"
            android:scaleType="fitCenter"
            android:src="@drawable/bb_logo_a"
            android:visibility="invisible"/>

    </FrameLayout>

</RelativeLayout>
